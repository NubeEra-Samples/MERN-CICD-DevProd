pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            when {
                anyOf {
                    expression { env.BRANCH_NAME == 'dev-branch' }
                    expression { env.BRANCH_NAME == 'prod-branch' }
                }
            }
            steps {
                echo 'Checking out code from Git...'
                git branch: env.BRANCH_NAME, url: 'https://github.com/NubeEra-Samples/MERN-CICD-DevProd.git'
            }
        }

        stage('install') {
            when {
                anyOf {
                    expression { env.BRANCH_NAME == 'dev-branch' }
                    expression { env.BRANCH_NAME == 'prod-branch' }
                }
            }
            steps {
                // For both Unix and Windows
                bat 'npm install'
            }
        }

        stage('create-env-dev') {
            when {
                branch 'dev-branch'
            }
            environment {
                DEPLOYMENT_SERVER_IP = '54.206.101.252'  // Replace with your development server IP
                DEPLOYMENT_PATH = '/home/ubuntu/my-nodejs-app'
                // SSH_KEY="mujahed.pem"
                SSH_KEY_CONTENTS=credentials("key-pem")
            }
            steps {
                withCredentials([
                    sshUserPrivateKey(credentialsId: "dev-server", keyFileVariable: 'SSH_KEY')
                ]) {
                    echo 'Deploying the application'
                    script {
                        if (isUnix()) {
                            sh '''#!/bin/bash
                                mkdir -p /var/lib/jenkins/.ssh
                                ssh-keyscan ${$DEPLOYMENT_SERVER_IP} >> /var/lib/jenkins/.ssh/known_hosts
                                rsync -avz --delete -e "ssh -i $SSH_KEY" ./ deployer@$DEPLOYMENT_SERVER_IP:$DEPLOYMENT_PATH
                                ssh -i $SSH_KEY deployer@$DEPLOYMENT_SERVER_IP "cd $DEPLOYMENT_PATH && npm install && npm start &"
                            '''
                        } else {
                            bat '''
                                echo %SSH_KEY_CONTENTS%
                                type nul > known_hosts
                                echo %userprofile%
                                ::mkdir -p  %userprofile%\\.ssh
                                ssh-keyscan %DEPLOYMENT_SERVER_IP% >> %userprofile%\\.ssh\\known_hosts
                                type nul > key.pem
                                copy %SSH_KEY% key1.pem
                                icacls key1.pem /inheritance:r /grant:r "%USERNAME%:R"
                                scp -r -i key1.pem . ubuntu@%DEPLOYMENT_SERVER_IP%:%DEPLOYMENT_PATH%
                                ssh -i key1.pem ubuntu@%DEPLOYMENT_SERVER_IP% "cd %DEPLOYMENT_PATH% && npm install && start npm start"
                            '''
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
